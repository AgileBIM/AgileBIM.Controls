    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Tester"
    xmlns:abc="clr-namespace:AgileBIM.Controls;assembly=AgileBIM.Controls"        
    x:Class="Tester.MainWindow"
    mc:Ignorable="d"
    Background="White"
    Title="AgileBIM Controls Tester" Height="800" Width="350">
    <Window.Resources>
        <Style TargetType="{x:Type abc:AgileButton}" BasedOn="{StaticResource {x:Type Button}}"/>
        <Style TargetType="{x:Type abc:AgileToggleButton}" BasedOn="{StaticResource {x:Type ToggleButton}}"/>
        <Style TargetType="{x:Type abc:AgileComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}"/>
        <Style TargetType="{x:Type abc:AgileTabControl}" BasedOn="{StaticResource {x:Type TabControl}}"/>
        <Style TargetType="{x:Type abc:AgileTabItem}" BasedOn="{StaticResource {x:Type TabItem}}"/>
    </Window.Resources>
